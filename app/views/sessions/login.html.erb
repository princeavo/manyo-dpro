<h1><%= t("login_page.title") %></h1>
<p id="error"><%= flash[:error] %></p>
<p id="success"><%= flash[:success] %></p>
<%= form_with  local: true, data: { turbo: false }, url: new_session_post_path do |form| %>
  <div>
    <%= form.label :email, t("login_page.email_label") %> <br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password, t("login_page.password_label") %> <br>
    <%= form.password_field :password %>
  </div>
  <br>
  <%= form.submit t("login_page.login_button") %>
<% end %>
