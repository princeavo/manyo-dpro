<h1><%= t("new_account_page.title") %></h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> <%= @user.errors.count < 2 ? t('error_title_single') : t('error_title_plurial') %> <%= @user.errors.count < 2 ? t('global_form_user_error_sigle') : t('global_form_user_error_plurial') %>:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user , local: true, data: { turbo: false }, url: new_user_post_path do |form| %>
  <div>
    <%= form.label :name, t("new_account_page.name_label") %> <br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email, t("new_account_page.email_label") %> <br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password, t("new_account_page.password_label") %> <br>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation, t("new_account_page.password_confirmation_label") %> <br>
    <%= form.password_field :password_confirmation %>
  </div>
  <br>
  <%= form.submit t("new_account_page.create_account_button") %>
  <div>
    <%= link_to t("back"), tasks_path %>
  </div>
<% end %>
